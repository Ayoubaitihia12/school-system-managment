{% extends 'template.html.twig' %}

{% block title %}Classes{% endblock %}

{% block path %}Classes{% endblock %}

{% block content %}


            <div class="max-w-full overflow-hidden rounded-lg border-[1.5px] shadow-xs">
              <div class="max-w-full overflow-x-auto">
                <div class="w-full flex items-center justify-between px-4 py-5 bg-white">
                  <h3 class="text-xl font-semibold">Classes</h3>
                  <div class="flex items-center space-x-3">
                    <a href="#"
                    class="text-white flex items-center gap-x-2 bg-primary-color hover:bg-primary-color w-[45px] h-[45px] justify-center focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm dark:bg-primary-color dark:hover:bg-primary-color focus:outline-none dark:focus:ring-primary-color"
                    >
                      <i class="fa-solid fa-print text-md"></i>
                    </a>
                    <a href="{{ path('app_classe_add') }}"
                    class="text-white flex items-center gap-x-2 bg-primary-color hover:bg-primary-color w-[45px] h-[45px] justify-center focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm dark:bg-primary-color dark:hover:bg-primary-color focus:outline-none dark:focus:ring-primary-color"
                    >
                      <i class="fa-solid fa-plus text-lg"></i>
                    </a>
                  </div>
                </div>
                <table class="w-full divide-y">
                  <thead>
                    <tr
                      class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800"
                    >
                        <th class="px-4 py-3">ID</th>
                        <th class="px-4 py-3">Classe Name</th>
                        <th class="px-4 py-3">Actions</th>
                    </tr>
                  </thead>
                  <tbody
                    class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800"
                  >
                    {% for classe in pagination %}
                    <tr class="text-gray-700 dark:text-gray-400">
                      <td class="px-4 py-3 text-sm">
                        {{ classe.code }}
                      </td>
                      <td class="px-4 py-3 text-sm">
                        {{ classe.name }}
                      </td>
                      <td class="px-4 py-3">
                        <div class="flex items-center space-x-1 text-sm">
                            <a href="{{ path('app_classe_update',{'id':classe.id}) }}" class="w-[25px] h-[25px] flex items-center justify-center rounded-lg bg-primary-color">
                                <i class="fa-solid fa-pencil text-xs text-white"></i>
                            </a>
                            <a href="{{ path('app_classe_delete',{'id':classe.id}) }}" class="w-[25px] h-[25px] flex items-center justify-center rounded-lg bg-light-red-color">
                                <i class="fa-solid fa-trash text-xs text-white"></i>
                            </a>
                            <a href="{{ path('app_classe_students',{'id':classe.id}) }}" class="w-[25px] h-[25px] flex items-center justify-center rounded-lg bg-accent-color">
                                <i class="fa-solid fa-list text-xs text-white"></i>
                            </a>
                        </div>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <div class="w-full px-4 py-3">
                <div>
                  {{ knp_pagination_render(pagination) }}
                </div>
              </div>
            </div>
        </div>
    </div>

</div>

{% endblock %}